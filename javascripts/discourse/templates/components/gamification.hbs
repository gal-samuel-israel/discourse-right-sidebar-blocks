<h3 class="gamification-heading">
  {{theme-i18n "gamification.heading"}}
</h3>

<div class="gamification--container">
  {{#each gamificationList.users as |item index|}}
    <div class="gamification--user">
      <span data-user-card={{item.username}} class="gamification--user-badge">
        {{avatar item imageSize="small"}}
        {{html-safe item.username}}
      </span>
      <span class="gamification--user-score">
         {{#switch {{index}} }} 
            {{#case 0}} 
                <span class"lb-gold">{{d-icon "crown"}}</span>
            {{/case}}
            {{#case 1}} 
                <span class"lb-silver">{{d-icon "crown"}}</span>
            {{/case}}
            {{#case 2}} 
                <span class"lb-bronze">{{d-icon "crown"}}</span>
            {{/case}}
            {{#default}}<span class"lb-x"></span>{{/default}}
        {{/switch}}
        {{item.total_score}}
      </span>
    </div>
  {{/each}}
</div>

<a class="gamification--view-all" href="/leaderboard">
  {{theme-i18n "gamification.view_all_tag"}}
</a>
